@model SanctionScannerAppLibrary.Models.Entities.User

@{
    ViewBag.Title = "GetUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kullanıcı | Güncelle</h2>

@using (Html.BeginForm("UpdateUser", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div style="margin-bottom:15px"></div>
    <div class="form-group row">
        @Html.HiddenFor(k => k.Id)
        <label class="col-sm-2 col-form-label font-weight-bold">Kullanıcı Adı (*)</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(x => x.FirstName, "", new { @style = "color:red" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold">Kullanıcı Soyadı (*)</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(x => x.LastName, "", new { @style = "color:red" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold">Mail Adresi (*)</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", required = "required", type = "email" })
            @Html.ValidationMessageFor(x => x.Mail, "", new { @style = "color:red" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold">Kullanıcı Adı</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold">Şifre</label>
        <div class="col-sm-10">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color:red" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold">Telefon</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold">Okul</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.School, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </div>
    </div>
}

