@model SanctionScannerAppLibrary.Models.Entities.Writer
@{
    ViewBag.Title = "AddWriter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Yazar | Ekle</h2>
<br />
<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label for="FirstName" class="col-form-label font-weight-bold">Yazar Adı (*)</label>
                <input type="text" id="FirstName" name="FirstName" class="form-control" required maxlength="50" />
                <div class="invalid-feedback">
                </div>
            </div>
            <div class="col-md-6">
                <label for="LastName" class="col-form-label font-weight-bold">Yazar Soyadı (*)</label>
                <input type="text" id="LastName" name="LastName" class="form-control" required maxlength="50" />
                <div class="invalid-feedback">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="Detail" class="font-weight-bold">Yazar Detay</label>
        <textarea id="Detail" name="Detail" class="form-control" maxlength="250"></textarea>
        <div class="invalid-feedback">
        </div>
    </div>

    <div style="margin-top:15px">
        <button type="submit" class="btn btn-success" style="background-color:#dc502e; color:white">Yazar Ekle</button>
    </div>
</form>
