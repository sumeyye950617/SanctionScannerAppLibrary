 @model SanctionScannerAppLibrary.Models.Entities.Writer
@{
    ViewBag.Title = "GetWriter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yazar | Güncelle</h2>

@using (Html.BeginForm("UpdateWriter", "Writer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div style=" margin-bottom:15px"></div>
    <div class="form-group row">
        @Html.HiddenFor(k => k.Id)
        <div class="col-sm-10">
            <label class="col-sm-2 col-form-label font-weight-bold">Yazar Adı (*)</label>
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", required = "required" })
            <div class="invalid-feedback">
            </div>
        </div>
        <div class="col-sm-10">
            <label class="col-sm-2 col-form-label font-weight-bold">Yazar Adı (*)</label>
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", required = "required" })
            <div class="invalid-feedback">
            </div>
        </div>
        <div class="col-sm-10">
            <label class="col-sm-2 col-form-label font-weight-bold">Yazar Detay</label>
            @Html.TextAreaFor(x => x.Detail, new { @class = "form-control", maxlength = "250" })
            <div class="invalid-feedback">
            </div>
        </div>
    </div>

    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}